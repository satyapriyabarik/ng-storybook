{
  "name": "@greenkart/storybook-ui",
  "version": "1.2.0",
  "description": "Reusable React component library with Storybook",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/storybook-ui.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "vite build && tsc --emitDeclarationOnly",
    "build-storybook": "storybook build",
    "preview-storybook": "npx http-server storybook-static"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "prop-types": "^15.8.1",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/node": "^24.9.1",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "typescript": "^5.6.3",
    "vite": "^6.0.0",
    "vite-plugin-svgr": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/satyapriyabarik/ng-storybook"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satyapriyabarik/ng-storybook/issues"
  },
  "homepage": "https://github.com/satyapriyabarik/ng-storybook#readme"
}