{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler", // ✅ avoids '.js' extension errors
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true, // ✅ produce .d.ts files for consumers
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "allowJs": false,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        ".storybook/**/*",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}