{
    "compilerOptions": {
        /* ✅ modern build target */
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        /* ✅ React setup */
        "jsx": "react-jsx",
        /* ✅ strict typing */
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        /* ✅ declarations for consumers (the key part!) */
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist",
        /* ✅ ensures .d.ts files go where Vite builds JS */
        "outDir": "dist",
        /* ✅ Vite + TS interop */
        "isolatedModules": true,
        "resolveJsonModule": true,
        /* ✅ paths and base */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".storybook",
        "vite.config.ts"
    ]
}